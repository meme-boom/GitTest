public class Bus15 {

	
	public static void main(String[] args) {
		
		int a =(int)(Math.random()*100)+1;

		int b=0;
	
		if(a>=0 && a<=3)
			b=100;
		if(a>=4 && a<=13)
			b=50;
		if(a>=14 && a<=19)
			b=25;
		if(a>=20 && a<=64)
			b=0;
		if(a>=65)
			b=100;
		else
			System.out.println("0이상 값입력");
		
		
		int price=1500-1500*(b)/100;
		
		System.out.println("나이 "+a);
		System.out.println("할인율 "+b+"%");
		System.out.println("가격 "+price);
}

}