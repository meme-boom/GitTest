import java.util.Scanner;

public class Bus02 {

	
	public static void main(String[] args) {
		
			int age =(int)(Math.random()*99)+1;

			int price=dc(age);
			
			System.out.println("당신의 나이는 "+age);
			System.out.println("당신의 할인율은 "+price);
		}
	
	
	public static int dc(int a) {
		int b=0;
		if(a>=0 && a<=3)
			b=100;
		else if(a>=4 && a<=13)
			b=50;
		else if(a>=14 && a<=19)
			b=25;
		else if(a>=20 && a<=64)
			b=0;
		else if(a>=65 && a<=100)
			b=100;
		return b;			
	}
}
